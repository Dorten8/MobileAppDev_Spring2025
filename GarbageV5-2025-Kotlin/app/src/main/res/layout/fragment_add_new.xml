<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#767272"
    android:padding="5dp"
    tools:context=".AddItemActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment_add_new"
        tools:layout_editor_absoluteX="5dp">

        <TextView
            android:id="@+id/new_item_to_sort_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:hint="@string/add_item_what_item_to_sort"
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/add_item_what_item_to_sort"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="@string/add_item_what_item_to_sort"
            android:inputType="text"
            />


        <TextView
            android:id="@+id/where_to_sort_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_item_where_to_sort"
            android:textAlignment="center"
            />


        <EditText
            android:id="@+id/add_where_to_sort_new_item_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:ems="10"
            android:hint="@string/add_item_where_to_sort"
            android:inputType="text"
            />

        <Button
            android:id="@+id/add_new_item_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_size"
            android:text="@string/add_new_item_button"
            android:textSize="@dimen/text_size"
           />

        <TextView
            android:id="@+id/notification_item_added"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_was_added_notification"
            android:textSize="60sp" />

    </FrameLayout>

</LinearLayout>